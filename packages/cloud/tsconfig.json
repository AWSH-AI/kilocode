{
	"extends": "@roo-code/config-typescript",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2022",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
