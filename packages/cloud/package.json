{
	"name": "@roo-code/cloud",
	"version": "0.0.0",
	"description": "Roo Code / Kilo Code cloud services",
	"type": "module",
	"exports": "./src/index.ts",
	"main": "src/index.ts",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/server.js",
		"lint": "eslint src --ext=ts --max-warnings=0",
		"check-types": "tsc --noEmit",
		"clean": "rimraf dist .turbo",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push"
	},
	"dependencies": {
		"@roo-code/types": "workspace:^",
		"@roo-code/telemetry": "workspace:^",
		"express": "^4.18.2",
		"fastify": "^4.23.0",
		"cors": "^2.8.5",
		"helmet": "^7.0.0",
		"jsonwebtoken": "^9.0.2",
		"bcryptjs": "^2.4.3",
		"drizzle-orm": "^0.44.1",
		"postgres": "^3.4.7",
		"redis": "^5.5.5",
		"socket.io": "^4.7.5",
		"zod": "^3.25.61",
		"dotenv": "^16.3.1",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/cors": "^2.8.17",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/bcryptjs": "^2.4.6",
		"@types/node": "^20.10.4",
		"tsx": "^4.19.3",
		"typescript": "^5.4.5",
		"drizzle-kit": "^0.31.1",
		"rimraf": "^3.0.2",
		"@roo-code/config-typescript": "workspace:^",
		"@roo-code/config-eslint": "workspace:^"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@roo-code/telemetry",
				"@roo-code/types"
			]
		}
	}
}
